{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@game-hub/assets": ["libs/shared/assets/src/index.ts"],
      "@game-hub/games/feature-ball-blast": [
        "libs/games/ball_blast/feature-ball-blast/src/index.ts"
      ],
      "@game-hub/games/feature-snake-master": [
        "libs/games/snake_master/feature-snake-master/src/index.ts"
      ],
      "@game-hub/shared/domain-logic": [
        "libs/shared/domain-logic/src/index.ts"
      ],
      "ball_blast/Module": [
        "apps/games/ball_blast/src/app/remote-entry/entry.module.ts"
      ],
      "global_chat/Module": [
        "apps/operations/global_chat/src/app/remote-entry/entry.module.ts"
      ],
      "snake_master/Module": [
        "apps/games/snake_master/src/app/remote-entry/entry.module.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
